{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2021.String", "ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    // "strict": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strict": false, // Disable all strict type checks
    "noImplicitAny": false, // Allow implicit 'any' types
    "strictNullChecks": false, // Allow `null` and `undefined` in all types
    "strictFunctionTypes": false, // Disable strict checking of function types
    "strictPropertyInitialization": false, // Disable strict checks on property initialization in classes
    "noUnusedLocals": false, // Allow unused variables
    "noUnusedParameters": false, // Allow unused parameters
    "forceConsistentCasingInFileNames": false // Disable enforcing consistent casing
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
